<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DoubleDashCrash.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DoubleDashCrash"
    
    Shell.FlyoutBehavior="Flyout" 
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="YellowGreen"
    Title="DoubleDashCrash">


    <FlyoutItem Route="shellHome" Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Double Dash Crash">
        <ShellContent ContentTemplate="{DataTemplate local:DoubleDashCrashPage}"/>
    </FlyoutItem>


</Shell>
