<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnackbarBug.MainPage">

    <AbsoluteLayout>
        <Button
            AbsoluteLayout.LayoutBounds="0.5,0,300,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            x:Name="CounterBtn"
            Text="CommunityToolkit.Maui 11.2.0" 
            Clicked="OnCounterClicked"/>

        
        <Label 
            AbsoluteLayout.LayoutBounds="0,1, 0,0" 
            AbsoluteLayout.LayoutFlags="PositionProportional"

            x:Name="snackbarAnchor" 
            BackgroundColor="Red" 
            TextColor="Transparent"
            WidthRequest="10"
            HeightRequest="10"/>
    </AbsoluteLayout>

</ContentPage>
